<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- links************* -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/b7a2ac83f3.js" crossorigin="anonymous"></script>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">School is almost over</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/admin">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/students">Students</a>
          </li>
        </ul>
        <span class="navbar-text">
          <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Menu</a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">Add  Students</a></li>
              <li><a class="dropdown-item" href="#"></a></li>
              <li><a class="dropdown-item" href="/login/logout">Sign Out</a></li>
            </ul>
          </div>
        </span>
      </div>
    </div>
  </nav>

  <br><br>
  
    <div class="lunch_table">
        <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Student ID</th>
                <th scope="col">Book ID</th>
                <th scope="col">Date Requested</th>
                <th scope="col">Due Date</th>
                <th scope="col">Overdue</th>
                <th scope="col">Approved</th>
              </tr>
            </thead>
            <tbody>
              <% if(requests.length){ for(var i=0; i< requests.length; i++) { %>
                <tr>
                  <td scope="row"><%= requests[i].id %></td>
                  <td scope="row"><%= requests[i].student_id %></td>
                  <td scope="row"><%= requests[i].book_id %></td>
                  <td scope="row"><%= requests[i].date_requested.toLocaleString() %></td>
                  <td scope="row"><%= requests[i].due_date.toLocaleString() %></td>
                  <td scope="row"><%= requests[i].overdue.toLocaleString() %></td>
                  <td scope="row"><%= requests[i].approved %></td>

                  <td scope="row">
                    <a href="#">
                      <i class="fa-solid fa-file-pen"></i>
                    </a>
                    <a href="#">
                      <i class="fa-solid fa-trash-can"></i>
                    </a>
                  </td>
                </tr>
                <% } }else { %>
                <tr>
                  <th scope="row" colspan="7" class="text-center">No Records Found</th>
                </tr>
              <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>